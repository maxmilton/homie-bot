{
  "name": "homie-bot",
  "version": "0.1.1",
  "description": "ðŸ¤– Home automation, yo!",
  "repository": "https://github.com/MaxMilton/homie-bot",
  "bugs": "https://github.com/MaxMilton/homie-bot/issues",
  "homepage": "https://github.com/MaxMilton/homie-bot#readme",
  "author": "Max Milton <max@wearegenki.com>",
  "license": "MIT",
  "keywords": [
    "bot",
    "home-automation",
    "maxmilton",
    "minna-ui",
    "node",
    "postcss",
    "sapper",
    "sqlite",
    "svelte",
    "web-app",
    "web-ui"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "static",
    "start.sh",
    "stop.sh"
  ],
  "scripts": {
    "dev": "GIT_RELEASE=$(git describe --always --dirty=\"-dev\") sapper dev",
    "build": "GIT_RELEASE=$(git describe --always --dirty=\"-dev\") NODE_ENV=production sapper build ./dist",
    "serve": "NODE_ENV=production node ./dist",
    "_run": "yarn build && yarn serve",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:ts && yarn lint:md",
    "lint:css": "stylelint --ignore-path .gitignore **/*.{css,html,md}",
    "lint:js": "eslint --ignore-path .gitignore --ext html,js,md .",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:md": "markdownlint --ignore **/node_modules/** .",
    "test": "yarn lint && JEST_CIRCUS=1 jest --notify --watch",
    "test-ci": "JEST_CIRCUS=1 jest --coverage --runInBand --ci"
  },
  "dependencies": {
    "better-sqlite3": "^5.0.1",
    "color-convert": "^1.9.3",
    "colorette": "^1.0.7",
    "compression": "^1.7.3",
    "polka": "^0.5.1",
    "sirv": "^0.2.2",
    "yeelight-awesome": "^1.0.11"
  },
  "devDependencies": {
    "@ampproject/rollup-plugin-closure-compiler": "0.9.0-beta.7",
    "@types/better-sqlite3": "5.0.0",
    "@types/color-convert": "1.9.0",
    "@types/node": "10.12.11",
    "@wearegenki/renovate-config": "1.0.0",
    "chokidar": "2.0.4",
    "codecov": "3.1.0",
    "eslint": "5.9.0",
    "jest": "23.6.0",
    "markdownlint-cli": "0.13.0",
    "minna-ui": "0.17.1",
    "postcss": "7.0.6",
    "postcss-scss": "2.0.0",
    "prettier": "1.15.2",
    "purgecss": "1.1.0",
    "rollup": "0.67.3",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-svelte": "4.4.0",
    "rollup-plugin-terser": "3.0.0",
    "rollup-plugin-typescript": "1.0.0",
    "sapper": "0.24.0",
    "stylelint": "9.9.0",
    "svelte": "2.15.3",
    "ts-jest": "23.10.5",
    "tslib": "1.9.3",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.2.0-rc"
  }
}
