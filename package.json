    "postcss-scss": "2.0.0",
    "prettier": "1.16.1",
    "purgecss": "1.1.0",
    "rollup": "1.1.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-replace": "2.1.0",
    "rollup-plugin-svelte": "5.0.1",
    "rollup-plugin-terser": "4.0.2",
    "rollup-plugin-typescript": "1.0.0",
    "sapper": "0.24.2",
